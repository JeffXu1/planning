{

  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) 启动",
      "type": "cppdbg",
      "request": "launch",
      # "program": "${workspaceFolder}/bin/quintixPloy", #要调试文件的绝对路径
      "program": "${workspaceFolder}/src/kd_tree", #要调试文件的绝对路径
      "args": [],
      "stopAtEntry": false,
      # "cwd": "${fileDirname}",
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "为 gdb 启用整齐打印",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "将反汇编风格设置为 Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask":"build", #在调试之前做一个task ,build为task中建立的label的名字
      "miDebuggerPath": "/usr/bin/gdb"
    }
  ]
}